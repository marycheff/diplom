{
    "name": "index",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon --exec ts-node -r tsconfig-paths/register ./src/index.ts",
        "build": "prisma generate && tsc",
        "start": "node -r module-alias/register ./dist/src/index.js",
        "postbuild": "node -e \"require('os').platform() === 'win32' ? require('fs').copyFileSync('package.json', 'dist/package.json') : require('fs').copyFileSync('package.json', 'dist/package.json')\"",
        "postinstall": "prisma generate"
    },
    "dependencies": {
        "@prisma/client": "^6.3.0",
        "axios": "^1.7.9",
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "express-validator": "^7.2.1",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "nodemailer": "^6.10.0",
        "uuid": "^11.0.5"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/axios": "^0.14.4",
        "@types/cookie-parser": "^1.4.8",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jsonwebtoken": "^9.0.8",
        "@types/node": "^22.13.0",
        "@types/nodemailer": "^6.4.17",
        "@types/uuid": "^10.0.0",
        "nodemon": "^3.1.9",
        "prisma": "^6.3.0",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.7.3"
    }
