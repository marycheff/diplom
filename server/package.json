{
    "name": "server",
    "version": "1.0.0",
    "type": "module",
    "main": "index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "prisma generate && tsc",
        "start": "node -r module-alias/register ./dist/src/index.js",
        "postbuild": "node -e \"const fs = require('fs'); if (!fs.existsSync('dist')) fs.mkdirSync('dist'); const pkg = JSON.parse(fs.readFileSync('package.json', 'utf8')); fs.writeFileSync('dist/package.json', JSON.stringify(pkg, null, 4));\"",
        "postinstall": "prisma generate"
    },
    "dependencies": {
        "@prisma/client": "^6.7.0",
        "axios": "^1.9.0",
        "bcryptjs": "^3.0.2",
        "cookie": "^1.0.2",
        "cors": "^2.8.5",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "follow-redirects": "^1.15.9",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "node-cron": "^3.0.3",
        "nodemailer": "^6.10.1",
        "redis": "^5.0.0",
        "uuid": "^11.1.0",
        "winston": "^3.17.0",
        "zod": "^3.24.3"
    },
    "devDependencies": {
        "@types/axios": "^0.14.4",
        "@types/bcrypt": "^5.0.2",
        "@types/bun": "^1.2.11",
        "@types/cookie": "^1.0.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.1",
        "@types/follow-redirects": "^1.14.4",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/node": "^22.15.3",
        "@types/node-cron": "^3.0.11",
        "@types/nodemailer": "^6.4.17",
        "@types/uuid": "^10.0.0",
        "prisma": "^6.7.0",
        "tsx": "^4.19.4",
        "typescript": "^5.8.3"
    },
    "_moduleAliases": {
        "@": "./dist/src"
    }
}
