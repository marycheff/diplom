{
	"compilerOptions": {
		"module": "ESNext",
		// "module": "CommonJS",
		// "noUnusedLocals": true,
		// "noUnusedParameters": true,
		// "noEmit": true,
		"target": "ES2020",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["src/**/*"],
	"files": ["src/types/express.d.ts"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
