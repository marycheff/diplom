generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Не забыть про миграцию при созданни модели
model User {
  id             String   @id @default(cuid())
  email          String   @unique @db.VarChar(255)
  firstName      String?
  secondName     String?
  patronymic     String?
  password       String   @db.VarChar(255)
  activated      Boolean  @default(false)
  role           Role     @default(USER) // Основная роль (User или Admin)
  activationLink String? // Поле может быть NULL
  resetCode      String? // Поле для хранения кода сброса пароля (может быть NULL)
  token          Token?
  isBlocked      Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

model Token {
  id           String   @id @default(cuid())
  userId       String   @unique
  refreshToken String   @unique @db.VarChar(500)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}
